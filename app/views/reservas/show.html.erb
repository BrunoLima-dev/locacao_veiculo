<table class="table">
  <thead>
    <tr>
      <th colspan="2">
        <h1>Mostrar reserva</h1>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Veiculo:</th>
      <td><%= @reserva.veiculo.nome %></td>
    </tr>
    <tr>
      <th>Cliente:</th>
      <td><%= @reserva.cliente.nome %></td>
    </tr>
    <tr>
      <th>Tempo de espera:</th>
      <td><%= Time.at(@reserva.tempo_de_espera.minutes).utc.strftime("%H:%M:%S") %>hs</td>
    </tr>
    <tr>
      <th>Valor alugado:</th>
      <td><%= number_to_currency(@reserva.valor_alugado, unit: 'R$', separator: ',', delimiter: '.') %></td>
    </tr>
    <tr>
      <th>Reservado de:</th>
      <td><%= @reserva.reservado_de.strftime("%d/%m/%Y %H:%M") %></td>
    </tr>
    <tr>
      <th>Reservado ate:</th>
      <td><%= @reserva.reservado_ate.strftime("%d/%m/%Y %H:%M") %></td>
    </tr>
    <tr>
      <th>Pagamento no destino:</th>
      <td><%= pag_no_destino %></td>
    </tr>
  </tbody>
</table>
<div class="text-right">
  <a href="<%= reservas_path %>" class="btn btn-default">
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  </a>
  <a href="<%= edit_reserva_path(@reserva) %>" class="btn btn-primary">
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  </a>
</div>
