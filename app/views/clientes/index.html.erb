<style>
   .table-hover tbody tr:hover {
    background-color: rgb(40, 96, 144);
    color: white;
  }
</style>
<div class="page-header">
  <%= link_to new_cliente_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Cliente
  <% end %>
  <h1>Listagem clientes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">Nome</th>
        <th class="text-center">Cpf</th>
        <th class="text-center">Cep</th>
        <th class="text-center">Estado</th>
        <th class="text-center">Rua</th>
        <th class="text-center">Numero</th>
        <th class="text-center">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @clientes = @clientes.sort_by(&:nome) %>
      <%= content_tag_for(:tr, @clientes) do |cliente| %>
        <td class="text-center"><%= cliente.nome %></td>
        <td class="text-center"><%= cliente.cpf %></td>
        <td class="text-center"><%= cliente.cep %></td>
        <td class="text-center"><%= cliente.estado %></td>
        <td class="text-center"><%= cliente.rua %></td>
        <td class="text-center"><%= cliente.numero %></td>
        <td class="text-center">
          <%= link_to 'Mostrar', cliente, :class => 'btn btn-success btn-xs' %>
          <%= link_to 'Editar', edit_cliente_path(cliente), :class => 'btn btn-primary btn-xs' %>
          <%= link_to 'Deletar', cliente, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-xs btn-danger' %>
        </td>            
      <% end %>
    </tbody>
  </table>
</div>
