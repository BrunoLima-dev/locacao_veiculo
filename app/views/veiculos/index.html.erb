<style>
  .table-hover tbody tr:hover {
    background-color: rgb(40, 96, 144);
    color: white;
  }
</style>

<div class="page-header">
  <%= link_to new_veiculo_path, class: 'btn btn-primary btn-sm action-button' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Veiculo
  <% end %>
  <h1>Listagem de veiculos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">Nome</th>
        <th class="text-center">Marca</th>
        <th class="text-center">Cor</th>
        <th class="text-center">Qnt passageiros</th>
        <th class="text-center">Placa</th>
        <th class="text-center">Valor</th>
        <th class="text-center">Ação</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @veiculos) do |veiculo| %>
        <tr>
          <td class="text-center"><%= veiculo.nome %></td>
          <td class="text-center"><%= veiculo.marca.nome rescue nil %></td>
          <td class="text-center"><%= veiculo.cor %></td>
          <td class="text-center"><%= veiculo.qnt_passageiros %></td>
          <td class="text-center"><%= veiculo.placa %></td>
          <td class="text-center"><%= veiculo.valor %></td>
          <td class="text-center">
            <%= link_to 'Show', veiculo, :class => 'btn btn-success btn-xs' %>
            <%= link_to 'Edit', edit_veiculo_path(veiculo), :class => 'btn btn-primary btn-xs' %>
            <%= link_to 'Destroy', veiculo, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
